<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent">

<LinearLayout android:layout_height="wrap_content" android:layout_width="fill_parent" android:layout_marginRight="0dp"
              android:layout_marginBottom="5dp" android:layout_marginLeft="0dp" android:orientation="vertical" android:gravity="center">

    <TextView android:layout_marginBottom="5dp" android:layout_marginLeft="0dp" android:layout_marginRight="0dp" android:textSize="16dp" android:layout_width="fill_parent" android:padding="10dp"
              android:layout_height="wrap_content" android:background="#ddd" android:textColor="#000"
              android:text="Настройки сервера" android:gravity="center" android:textStyle="bold"/>


    <TextView android:layout_marginLeft="5dp" android:layout_marginTop="5dp" android:layout_width="fill_parent"
              android:layout_height="wrap_content" android:text="Путь:"/>
    <EditText android:inputType="textUri" android:id="@+id/url_pre" android:text="" android:layout_margin="5dp" android:layout_height="wrap_content"
              android:hint="введите путь до службы" android:layout_width="fill_parent" />

    <TextView android:layout_marginLeft="5dp" android:layout_marginTop="5dp" android:layout_width="fill_parent"
              android:layout_height="wrap_content" android:text="пространство имен:"/>
    <EditText android:id="@+id/url_area" android:inputType="textUri" android:text="" android:layout_margin="5dp" android:layout_height="wrap_content" android:hint="ввелите пространство имен" android:layout_width="fill_parent" />

    <Button android:id="@+id/dialog_enter" android:layout_margin="10dp" android:padding="5dp" android:text=" Ввод "  android:layout_height="wrap_content" android:layout_width="fill_parent"/>
</LinearLayout>
</LinearLayout>