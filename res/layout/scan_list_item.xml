<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="wrap_content">
    <!--item start -->
    <LinearLayout  android:orientation="horizontal" android:layout_marginTop="1dp"  android:layout_height="50dp" android:layout_width="fill_parent" android:background="#000">

        <LinearLayout android:orientation="vertical" android:layout_width="0dp" android:layout_weight="1"
                      android:layout_height="wrap_content" android:background="#000" >
            <LinearLayout android:layout_width="fill_parent" android:layout_height="wrap_content" android:orientation="horizontal">
                 <TextView android:id="@+id/scan_list_baracode" android:layout_height="wrap_content" android:layout_width="wrap_content"
                          android:text="12345678" android:textSize="16dp" />
                <TextView android:id="@+id/scan_list_count" android:layout_height="wrap_content" android:layout_width="0dp" android:layout_weight="1"
                          android:text="200шт." android:textSize="16dp" android:gravity="right" />
            </LinearLayout>

            <TextView android:id="@+id/scan_list_name" android:layout_height="wrap_content" android:layout_width="fill_parent"
                      android:text="Женские ботфорты коричневые" />
        </LinearLayout>

        <TextView android:id="@+id/remove_item" android:layout_height="fill_parent" android:layout_width="50dp" android:background="#711"
                  android:text="X" android:gravity="center"/>

    </LinearLayout>
    <!--item end -->
</LinearLayout>
